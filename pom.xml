<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>2.4.3</version>
  </parent>

  <groupId>com.tek</groupId>
  <artifactId>tek-framework-parent</artifactId>
  <version>3.0.0</version>
  <packaging>pom</packaging>

  <name>tek-framework</name>

  <properties>
    <java.version>11</java.version>
    <!-- Dependency management versioning -->
    <springfox-boot-starter.version>3.0.0</springfox-boot-starter.version>
    <rsql-parser.version>2.1.0</rsql-parser.version>
    <javers-spring-boot-starter-sql.version>5.15.0</javers-spring-boot-starter-sql.version>
    <hibernate-types-52.version>2.9.0</hibernate-types-52.version>
    <commons-io.version>2.8.0</commons-io.version>
    <!-- Plugin management versioning -->
    <org.hibernate.orm.tooling.version>5.4.10.Final</org.hibernate.orm.tooling.version>
  </properties>

  <repositories>
    <repository>
      <id>repoReadUrl</id>
      <url>${repoReadUrl}</url>
    </repository>
  </repositories>

  <distributionManagement>
    <repository>
      <id>repoWriteUrl</id>
      <url>${repoWriteUrl}</url>
    </repository>
    <snapshotRepository>
      <id>repoWriteUrl</id>
      <url>${repoWriteUrl}</url>
    </snapshotRepository>
  </distributionManagement>

  <dependencies>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
    </dependency>
  </dependencies>

  <!-- Optional dependencies inherited by child modules: must be declared inside child.pom.xml-->
  <dependencyManagement>
    <dependencies>
      <!-- Swagger -->
      <dependency>
        <groupId>io.springfox</groupId>
        <artifactId>springfox-boot-starter</artifactId>
        <version>${springfox-boot-starter.version}</version>
      </dependency>
      <!--REST Sql Query Language-->
      <dependency>
        <groupId>cz.jirutka.rsql</groupId>
        <artifactId>rsql-parser</artifactId>
        <version>${rsql-parser.version}</version>
      </dependency>
      <!-- Javers -->
      <dependency>
        <groupId>org.javers</groupId>
        <artifactId>javers-spring-boot-starter-sql</artifactId>
        <version>${javers-spring-boot-starter-sql.version}</version>
      </dependency>
      <!-- Hibernate Datatype extensions -->
      <dependency>
        <groupId>com.vladmihalcea</groupId>
        <artifactId>hibernate-types-52</artifactId>
        <version>${hibernate-types-52.version}</version>
      </dependency>
      <!-- Hibernate Serializer for lazy objects -->
      <dependency>
        <groupId>com.fasterxml.jackson.core</groupId>
        <artifactId>jackson-databind</artifactId>
        <version>${jackson-bom.version}</version>
      </dependency>
      <dependency>
        <groupId>com.fasterxml.jackson.datatype</groupId>
        <artifactId>jackson-datatype-hibernate5</artifactId>
        <version>${jackson-bom.version}</version>
      </dependency>
      <!-- Google Guava Object Serializers -->
      <dependency>
        <groupId>com.fasterxml.jackson.datatype</groupId>
        <artifactId>jackson-datatype-guava</artifactId>
        <version>${jackson-bom.version}</version>
      </dependency>
      <!-- Utilities -->
      <dependency>
        <groupId>commons-io</groupId>
        <artifactId>commons-io</artifactId>
        <version>${commons-io.version}</version>
      </dependency>
      <!--            <dependency>-->
      <!--                <groupId>commons-beanutils</groupId>-->
      <!--                <artifactId>commons-beanutils</artifactId>-->
      <!--                <version>1.9.4</version>-->
      <!--            </dependency>-->
      <!--            <dependency>-->
      <!--                <groupId>org.reflections</groupId>-->
      <!--                <artifactId>reflections</artifactId>-->
      <!--                <version>0.9.12</version>-->
      <!--            </dependency>-->
    </dependencies>
  </dependencyManagement>

  <profiles>
    <!-- Development profile -->
    <profile>
      <id>dev</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <modules>
        <module>core</module>
        <!--                <module>audit</module>-->
        <!--                <module>application</module>-->
      </modules>
      <build>
        <plugins>
          <plugin>
            <!-- Avoid deploy if accidentaly called -->
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-deploy-plugin</artifactId>
            <configuration>
              <skip>true</skip>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>

    <!-- Release profile: deploy a new framework version to the remote repository -->
    <profile>
      <id>release</id>
      <modules>
        <module>core</module>
        <!--                <module>audit</module>-->
      </modules>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-source-plugin</artifactId>
            <executions>
              <execution>
                <id>attach-sources</id>
                <goals>
                  <goal>jar</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <build>
    <plugins>
      <!-- Git plugin to generate git.properties file when maven:compile is executed -->
      <plugin>
        <groupId>pl.project13.maven</groupId>
        <artifactId>git-commit-id-plugin</artifactId>
      </plugin>
      <!-- Create a jar with <test> classifier to import test sources across project modules -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>test-jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
    <!-- Optional plugin inherited by child modules: need to be declared inside child.pom.xml-->
    <pluginManagement>
      <plugins>
        <!-- Bytecode enhancement to work with lazy attributes properly
        see https://dzone.com/articles/hibernate-bytecode-enhancement-association-managem
        -->
        <plugin>
          <groupId>org.hibernate.orm.tooling</groupId>
          <artifactId>hibernate-enhance-maven-plugin</artifactId>
          <version>${org.hibernate.orm.tooling.version}</version>
          <executions>
            <execution>
              <configuration>
                <failOnError>true</failOnError>
                <enableLazyInitialization>true</enableLazyInitialization>
              </configuration>
              <goals>
                <goal>enhance</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>
